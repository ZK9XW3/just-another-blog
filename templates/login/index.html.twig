{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
{% include "navbar.html.twig" %}
{% include "title.html.twig" %}

<!-- Custom Html -->
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form method="post" action="{{ path('login') }}" accept-charset="UTF-8">
    {# {{ csrfInput() }}
    <input type="hidden" name="action" value="users/login"> #}

    <h3><label for="loginEmail">Email</label></h3>
    <input id="username" type="text" name="_username"
        value="{{ last_username }}">

    <h3><label for="password">Password</label></h3>
    <input id="password" type="password" name="_password">

    <input type="submit" value="Login">

    <!-- hidden CSRF token -->
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

</form>

{# <p><a href="">Forgot your password?</a></p> #}

{% include "footer.html.twig" %}
{% endblock %}
