{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
{% include "navbar.html.twig" %}
{% include "title.html.twig" %}

<!-- CUSTOM HTML-->
<section class="container-fluid bg-primary section-list">
    <div class="list row row-cols-sm-1 row-cols-lg-2 row-cols-xxl-3">
        {% for post in postsList %}
        <div class="col list__post-1">
            <img src="{{asset('uploads/posts/' ~ post.image)}}" alt="" class="list__img" width="500px">
            <div class="header-post px-0 pt-0 pb-2">
                <h3 class="__post__title">{{ post.title }}</h3>
                <span class="badge rounded-pill bg-secondary">
                    {% if post.category is not null %}
                    {{post.category.name}}
                    {% else %}
                    Category
                    {% endif %}
                </span>
            </div>
            <p class="list__text text-white">{{ post.text }}</p>
            <a href="{{ path('post', {id: post.id}) }}" class="list__link">read</a>
        </div>
        {% endfor %}
    </div>
</section>
{% set buttonSection = {'value': 'Back to top', 'endpoint': '/posts/#'} %}
{% include "button-section.html.twig" %}
{% include "footer.html.twig" %}
{% endblock %}
